
<div class="block md:flex items-end justify-between mb-4">
    <h1 class="text-2xl text-center md:text-start mb-1 font-medium text-slate-600">Search Authors</h1>

    <form 
        action="/authors" 
        method="GET" 
        class="flex justify-between p-1 rounded-full bg-white shadow-sm">
        <input 
            type="text" 
            name="name" 
            placeholder="Search for author..." 
            class="py-1 px-3 rounded-l-md outline-none w-72 bg-white" 
            value="<%= searchOptions.name %>">
        <button 
            type="submit" 
            class="p-1 text-sm border border-teal-500 bg-teal-500 
            rounded-full text-white px-3 hover:bg-teal-600">Search</button>
    </form>
</div>


<% authors.forEach( author => { %>
    <div class="flex items-center justify-between py-3 pl-4 pr-3 bg-white shadow-sm 
    shadow-slate-100 rounded-lg mb-1 hover:shadow-md hover:shadow-slate-200">
        <div class="text-md text-slate-600"><%= author.name %></div>

        <div class="flex items-center justify-end">
            <a href="/authors/<%= author.id %>" class="p-1 text-xs md:text-sm bg-sky-400 
                rounded-md text-white px-3 ml-2 md:ml-4 hover:bg-sky-500 hover:text-white">View</a>
            <a href="/authors/<%= author.id %>/edit " class="p-1 text-xs md:text-sm bg-green-400 
                rounded-md text-white px-3 ml-2 md:ml-4 hover:bg-green-500 hover:text-white">Edit</a>
            <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
        </div>
    </div>
    
<% } ) %> 
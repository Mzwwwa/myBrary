
<div class="border-b border-slate-200 mb-10">
    <div class="flex items-end justify-between py-4 ">
        <h1 class="text-2xl mb-1 font-medium text-slate-500"><%= author.name %></h1>

        <div class="flex items-center">
            <a href="/authors/<%= author.id %>/edit " class="p-1 text-xs md:text-sm bg-green-400 
                rounded-md text-white px-3 ml-2 md:ml-4 hover:bg-green-500 hover:text-white">Edit</a>    
            <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
        </div>
    </div>    
</div>




<% if(booksByAuthor.length > 0) { %>

    <h6 class="text-md mb-6 font-medium text-slate-600">Books By Author</h6>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% booksByAuthor.forEach( book => { %>
    
            <%- include('../partials/bookCard.ejs', {
                id: book.id,
                image: book.coverImagePath,
                title: book.title
            }) %> 
    
        <% } ) %> 
    </div>

<% } %>
